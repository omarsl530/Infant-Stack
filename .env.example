# Infant-Stack Environment Configuration
# Copy this file to .env and customize values

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=biobaby_db

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=change-me-in-production-use-long-random-string

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# MQTT
# =============================================================================
MQTT_BROKER=localhost
MQTT_PORT=1883

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Keycloak Authentication
# =============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=infant-stack
KEYCLOAK_CLIENT_ID=infant-stack-spa
KEYCLOAK_ADMIN_CLIENT_ID=infant-stack-admin
KEYCLOAK_ADMIN_CLIENT_SECRET=admin-client-secret-change-in-production

# Keycloak admin bootstrap credentials (for initial setup only)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

