{
  "name": "infant-stack-dashboards",
  "version": "0.1.0",
  "description": "Frontend dashboards for Infant-Stack hospital security ecosystem",
  "private": true,
  "type": "module",
  "workspaces": [
    "nurse-dashboard",
    "security-dashboard",
    "admin-dashboard",
    "shared-components"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=nurse-dashboard",
    "dev:nurse": "npm run dev --workspace=nurse-dashboard",
    "dev:security": "npm run dev --workspace=security-dashboard",
    "dev:admin": "npm run dev --workspace=admin-dashboard",
    "build": "npm run build --workspaces",
    "build:nurse": "npm run build --workspace=nurse-dashboard",
    "build:security": "npm run build --workspace=security-dashboard",
    "build:admin": "npm run build --workspace=admin-dashboard",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json}\"",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "axios": "^1.6.5",
    "oidc-client-ts": "^3.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-oidc-context": "^3.3.0",
    "react-router-dom": "^6.21.3",
    "zustand": "^4.5.0"
  }
}
